@charset "UTF-8";

 /*========== FORMS ==========*/
#form-login{		
	margin-left: 10px;
	margin-top: -225px;
	padding-left: 20px;
	width: 280px;
	height: 470px;	
	background: rgba(255, 255, 255, 0.85);	
	line-height: 30px;
	border-radius:7px;
	font-family:"Pacifico";
	font-size::1em;
}

#form-icon {
	padding-left:30%;
	padding-top: 10%;
}

#input {
	width:92%;
	padding-left:10px;	
	height:30px;
	outline:none;
}

#input[type="text"], #input[type="password"] {
	border-radius:5px;
}

.focusfield {
  	border:2px solid #73A6FF;
  	background:#EFF5FF;
  	background-color:#EFF5FF;
}

.idlefield {
  background:#EEE;
  border: 2px solid #DFDFDF;
  background-color: #EEE;
}

#login_form {
	margin-left: 600px;
	margin-top: 200px;
	border-radius::3px;
	text-align:center;
}

#login_form input {
	height:30px;
	outline:none;
}
#login_form input[type="text"] {
	display:block;
	border-radius:5px;
}

#login_form input[type="password"] {
	display:block;
	border-radius:5px;	
}

#form-signup {
	float:left;
	width: 300px;
	margin-left:38%;
	margin-top: 5%;
	position: :relative;
	font-family:"Lucida Grande";
	line-height:30px;
	font-family:Pacifico;
	background: rgba(255, 255, 255, 0.85);
	padding: 10px;
	border-radius:7px;
}

#form-signup h1 {
	text-align:center;
	font-family:BallPark;
}

#form-signup input, #form-signup select {
	display:block;
}

#form-signup input[type="text"] {
	width:100%;		
}

#form-signup input[type="password"] {
	width:100%;
}

#form-signup input[type="submit"] {
	margin-top: 20px;
	margin-left:80px;	
}

#form-signup fieldset {
	border-radius:7px;
	border:1px solid gray;
	border:medium;
}


/*========== SOCIAL LOGIN ==========*/
.social-login-inactive {
	visibility: hidden;
	margin-left:20%;
}

.social-login-active {
	visibility: visible;
	margin-left:20%;
}