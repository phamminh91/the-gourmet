@charset "UTF-8";

body {	
	background:no-repeat 0% 0%;
	background-image: url(bg4.jpg);
	line-height: 1;
	position: relative;
}

html, body {  
  /*border: 0;*/
  font-size: 100%;
  margin: 0;
  outline: 0;
  padding: 0;
  /*vertical-align: baseline; */
  margin-left: auto;
  margin-right: auto;
  width: 100%;
}

body {
	float:left;
}
html {
  min-height: 100%; 
}

.centered {
	margin-left: auto;
	margin-right: auto;
	width: 100%;
}

/*========== HEADER & FOOTER ==========*/
#header {
	background: none no-repeat scroll 0% 0% rgba(255, 255, 255, 0.85);
	left: 0;
	padding: 10px 0;
	position: relative;
	/*text-align: center;*/
	top: 0;
	width: 100%;
	z-index: 1;
}

#header ul {
	/*font: normal 14px/14px "Avenir", Helvetica, Arial, Verdana, sans-serif;*/
	margin: 0 0 0 349px;
	position: relative;	
	z-index: 1;
	font-family: "Pacifico";
	/*font-weight: bold;*/
}

#header ul li {
	display: inline-block;
	padding: 0 45px;
	/*font-weight: bold;*/
}

#header a {
	text-decoration: none;
	color: #5B5847;
}

#header a:hover {
	color: #FFB097; /* mau nuoc mam Nhat Ban */
}

#header:after {
	background: url(tab1.png) no-repeat center top;	
	top: 18px;
	content: "";
	display: block;
	height: 58px;	
	margin: 0 auto;
	position: absolute;	
	width: 100%;
}

#logo {
	padding: 0 0px;
	text-align:left;
	display: inline-block;
	float: left;
	margin-left: 10px;
	font-weight: normal;
	font-size: 1.5em;
	font-family: "Ballpark";
}

#logo a {
	color: #5B5847;
}

#logo a:hover {
	color: #FFB097; /* mau nuoc mam Nhat Ban */
}

#footer {
	text-align: center;
	position: relative;
	bottom: 0;
	width: 100%;
}

#footer a {
	background: none no-repeat scroll 0% 0% rgba(255, 255, 255, 0.85);
	padding-right: 10px;
	padding-left: 10px;	
}

/*========== WRAPPER ==========*/
#wrapper {
	float:left;
}

#container {		
	float:left;
}

#middle-wrapper {
	float:left;
}

/*========== TILES ==========*/
#tiles {
	float:left;	
	margin-left: 10%;
	margin-top: 5%;
}

.tiles-small {

}
#tiles-small-form{
	float:left;	
}

.tileRect {		
	float:left;
}

#bottomRect {
	margin-top: 1%;
}
.tileSquare {
	float:left;
	margin-right: 10px;
}